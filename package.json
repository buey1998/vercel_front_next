{
  "name": "frontend-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=4002 next dev",
    "build": "next build",
    "build:dev": "env-cmd -f .env.development yarn build && yarn start",
    "start": "PORT=4002 next start",
    "lint": "next lint --dir src",
    "css:dev": "TAILWIND_MODE=watch postcss src/styles/tailwind.css -o src/styles/globals.css --watch",
    "css:build": "postcss src/styles/tailwind.css -o src/styles/globals.css",
    "format": "prettier --write --ignore-path .prettierignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "autofix": "eslint --fix-dry-run --ignore-path .eslintignore './**/*.{js,jsx,ts,tsx}'",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-eslint": "eslint . --ext ts --ext tsx --ext js",
    "check-eslint:dev": "eslint . --ext ts --ext tsx --ext js",
    "prepare": "husky install",
    "test": "jest",
    "release": "semantic-release --no-ci",
    "precommit": "git-format-staged --formatter 'prettier --stdin' './**/*.{js,jsx,ts,tsx,json,css}'"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.(tsx|ts)": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.2",
    "@types/node": "18.8.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "autoprefixer": "^10.4.12",
    "babel-jest": "^29.1.2",
    "eslint": "^8.25.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "git-format-staged": "^3.0.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.2",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "node-mocks-http": "^1.11.0",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.5",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  }
}
